/* Confirm Dialog */

@import "colors.rasi"

* {
    background-color:       @bg-transparent;
    text-color:             @fg;
	font:				 	"Ubuntu 12";
}

window {
    width:      			14%;
    padding:    			25px;
    border:					0px 0px 1px 0px;
    border-radius:          0px;
    border-color:           @se;
    location:               center;
    y-offset:               -2em;
}

entry {
    expand: 				true;
    text-color:				@ac;
}
